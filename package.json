{
  "name": "laravel-kit",
  "description": "A desktop app for Laravel framework",
  "version": "2.0.5",
  "author": "Tareque Md Hanif <tarequemd.hanif@yahoo.com> (http://tmdh.github.io/)",
  "license": "GPLV2",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev:one": "webpack serve",
    "dev:two": "node build.js --dev && electron .",
    "prod": "cross-env NODE_ENV=production webpack --mode production && node build.js --prod",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "release": "electron-builder"
  },
  "dependencies": {
    "anser": "^2.0.1",
    "basename": "^0.1.2",
    "electron-store": "^8.0.0",
    "electron-updater": "^4.3.9",
    "electron-window-state": "^5.0.3",
    "execa": "^5.0.0",
    "monaco-editor": "^0.24.0",
    "strip-ansi": "^7.0.0",
    "tree-kill": "^1.2.2",
    "vue": "^2.6.12",
    "vuex": "^3.6.2",
    "which": "^2.0.2"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.3.3",
    "@tailwindcss/jit": "^0.1.18",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.4",
    "css-minimizer-webpack-plugin": "^3.0.0",
    "electron": "^11.2.1",
    "electron-builder": "^22.10.5",
    "electron-devtools-installer": "^3.2.0",
    "esbuild": "^0.12.9",
    "eslint": "^7.28.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-vue": "^7.11.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.1",
    "mini-css-extract-plugin": "^1.6.0",
    "monaco-editor-webpack-plugin": "^3.1.0",
    "postcss": "^8.3.4",
    "postcss-loader": "^5.3.0",
    "prettier": "^2.3.1",
    "tailwindcss": "^2.1.4",
    "vue-loader": "^15.9.7",
    "vue-template-compiler": "^2.6.12",
    "webpack": "^5.37.0",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tmdh/laravel-kit.git"
  },
  "bugs": {
    "url": "https://github.com/tmdh/laravel-kit/issues"
  },
  "prettier": {
    "trailingComma": "none",
    "printWidth": 200
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018
    }
  },
  "build": {
    "appId": "com.tmdh.laravel-kit",
    "productName": "Laravel Kit",
    "files": [
      "dist/**/*",
      "!node_modules${/*}"
    ],
    "extraResources": [
      "build/icon.png"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "darkModeSupport": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
}
