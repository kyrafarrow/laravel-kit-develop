{
  "name": "laravel-kit",
  "description": "A desktop app for Laravel framework",
  "version": "2.0.2",
  "author": "Tareque Md Hanif <tarequemd.hanif@yahoo.com> (http://tmdh.github.io/)",
  "license": "SEE LICENSE IN license.txt",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev:one": "webpack serve -c webpack.renderer.config.js",
    "dev:two": "webpack -c webpack.main.config.js && electron .",
    "prod": "cross-env NODE_ENV=production webpack -c webpack.renderer.config.js webpack.main.config.js --mode production",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "release": "electron-builder"
  },
  "dependencies": {
    "anser": "^2.0.1",
    "axios": "^0.21.1",
    "electron-store": "^7.0.1",
    "electron-updater": "^4.3.5",
    "electron-window-state": "^5.0.3",
    "execa": "^5.0.0",
    "monaco-editor": "^0.22.3",
    "node-machine-id": "^1.1.12",
    "strip-ansi": "^6.0.0",
    "tree-kill": "^1.2.2",
    "vue": "^2.6.11",
    "vuex": "^3.6.0",
    "which": "^2.0.2"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.2.1",
    "@tailwindcss/jit": "^0.1.1",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "css-minimizer-webpack-plugin": "^1.2.0",
    "electron": "^11.2.1",
    "electron-builder": "^22.9.1",
    "electron-devtools-installer": "^3.1.1",
    "eslint": "^7.20.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.6.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.2.0",
    "mini-css-extract-plugin": "^1.3.3",
    "monaco-editor-webpack-plugin": "^3.0.0",
    "postcss": "^8.2.8",
    "postcss-loader": "^5.0.0",
    "prettier": "^2.2.1",
    "tailwindcss": "^2.0.3",
    "vue-loader": "^15.9.6",
    "vue-template-compiler": "^2.6.12",
    "webpack": "^5.22.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tmdh/laravel-kit.git"
  },
  "bugs": {
    "url": "https://github.com/tmdh/laravel-kit/issues"
  },
  "prettier": {
    "trailingComma": "none",
    "printWidth": 200
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018
    }
  },
  "build": {
    "appId": "com.tmdh.laravel-kit",
    "productName": "Laravel Kit",
    "files": [
      "dist/**/*",
      "!node_modules${/*}"
    ],
    "extraFiles": [
      "build/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "darkModeSupport": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
}
